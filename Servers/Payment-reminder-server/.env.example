# Payment Reminder Scheduler - Environment Configuration

# ==========================================
# REQUIRED CONFIGURATION
# ==========================================

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DB_NAME=payment_app

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server Settings
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================================
# NOTIFICATION SERVICES
# ==========================================

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourapp.com

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application URLs
PAYMENT_URL=https://yourapp.com/pay
SUPPORT_EMAIL=support@yourapp.com

# Scheduler Configuration
CRON_SCHEDULE=0 * * * *
BATCH_SIZE=1000
QUEUE_CONCURRENCY=5

# ==========================================
# OPTIONAL: AWS CONFIGURATION
# ==========================================
# Uncomment if you want to use AWS SES/SNS instead of SendGrid/Twilio

# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# ==========================================
# DEVELOPMENT/TESTING
# ==========================================

# Enable Bull Dashboard (development only)
ENABLE_BULL_BOARD=true

# Skip actual SMS/Email sending in development
SKIP_NOTIFICATIONS=false

# ==========================================
# PRODUCTION SETTINGS
# ==========================================
# Uncomment these for production deployment

# Enable file logging
# LOG_TO_FILE=true

# SSL/TLS Settings
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# MONITORING & METRICS
# ==========================================

# Application Performance Monitoring
# APM_SERVER_URL=https://your-apm-server.com
# APM_SECRET_TOKEN=your_apm_token

# Sentry Error Tracking  
# SENTRY_DSN=https://your-sentry-dsn.com
